<!DOCTYPE html>

<html ng-app="geocms">
    
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>GeoCMS</title>
        <link type="text/css" rel="stylesheet" href="/Scripts/Libraries/bootstrap.css" />
        <link type="text/css" rel="stylesheet" href="/Scripts/Libraries/bootstrap-theme.css" />
        <link type="text/css" rel="stylesheet" href="/Scripts/Modules/Common/Reset.css" />
        <link type="text/css" rel="stylesheet" href="/Scripts/Modules/CMS/CMS.css" />
        <link type="text/css" rel="stylesheet" href="/Scripts/Modules/CMS/Customers/Customers.css" />
        <link type="text/css" rel="stylesheet" href="/Scripts/Modules/CMS/Boundaries/Boundaries.css" />
        <link type="text/css" rel="stylesheet" href="/Scripts/Modules/CMS/Categories/Categories.css" />
        <link type="text/css" rel="stylesheet" href="/Scripts/Modules/Navigation/Navigation.css" />
        <link type="text/css" rel="stylesheet" href="/Content/Themes/google-plus-ui-buttons/css/css3-buttons.css" media="screen">
        <link type="text/css" rel="stylesheet" href="/Scripts/Modules/Common/Application.css" />
        <link type="text/css" rel="stylesheet" href="/Scripts/Libraries/ui-bootstrap-custom.css" />
        <script src='//maps.googleapis.com/maps/api/js?sensor=false'></script>
        <script src="~/Scripts/Libraries/faker.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.min.js"></script>
        <script src="~/Scripts/Libraries/lodash.js"></script>
        <script src="~/Scripts/Libraries/angular-google-maps.js"></script>
        <script type="text/javascript">
        </script>
    </head>

    <body data-ng-controller="pageController">
        
        <div data-ng-include="'/Scripts/Modules/Navigation/MainMenu.html'" id="main-menu"></div>
        
        <div ui-view id="main-container"></div>

        <script type="text/javascript">

            var app = angular
                .module("geocms", ['ui.router', 'google-maps', 'ui.bootstrap'])
                .config(configureRouting);

            function configureRouting($stateProvider, $urlRouterProvider) {
                $urlRouterProvider.otherwise("/");
                $stateProvider
                    .state('login', {
                        url: "/login",

                        templateUrl: "Scripts/Modules/Security/Login.html"
                    })
                    .state('cms', {
                        url: "/",
                        templateUrl: "Scripts/Modules/CMS/CMS.html"
                    })
                    .state('cms.edit-customer', {
                        url: "/customers/{id}",
                        templateUrl: "Scripts/Templates/Dashboard.tpl.html"
                    });
            }
            
            $(document).ready(function () {
                $(document).click(function(e) {
                    if ($(e.target).parents(".button").parents(".dropdown").length < 1) {
                        $('.dropdown-slider').slideUp();
                        $('span.toggle').removeClass('active');
                    }
                });
    
            });
        </script>
        
        <script src="/Scripts/Modules/CMS/Map/MapsController.js"></script>
        <script src="/Scripts/Modules/CMS/Map/Map.js"></script>
        <script src="/Scripts/Modules/Navigation/PageController.js"></script>
        <script src="/Scripts/Modules/CMS/Editor/Editor.js"></script>
        <script src="/Scripts/Modules/CMS/CMS.js"></script>
        <script src="/Scripts/Modules/CMS/Boundaries/BoundariesController.js"></script>
        <script src="/Scripts/Modules/CMS/Boundaries/BoundaryService.js"></script>
        <script src="/Scripts/Modules/CMS/Boundaries/Boundaries.js"></script>
        <script src="/Scripts/Modules/CMS/Boundaries/Boundary.js"></script>
        <script src="/Scripts/Modules/CMS/Categories/CategoriesController.js"></script>
        <script src="/Scripts/Modules/CMS/Categories/CategoryService.js"></script>
        <script src="/Scripts/Modules/CMS/Categories/Categories.js"></script>
        <script src="/Scripts/Modules/CMS/Categories/Category.js"></script>
        <script src="/Scripts/Modules/CMS/Customers/CustomersController.js"></script>
        <script src="/Scripts/Modules/CMS/Customers/CustomerService.js"></script>
        <script src="/Scripts/Modules/CMS/Customers/Customers.js"></script>
        <script src="/Scripts/Modules/CMS/Customers/Customer.js"></script>
        <script src="/Scripts/Modules/Security/LoginController.js"></script>
        <script src="/Scripts/Modules/CMS/CollectionUtils.js"></script>
        <script src="/Scripts/Libraries/ui-bootstrap-custom-0.10.0.min.js"></script>
        <script src="/Scripts/Libraries/ui-bootstrap-custom-tpls-0.10.0.min.js"></script>
    </body>
</html>
