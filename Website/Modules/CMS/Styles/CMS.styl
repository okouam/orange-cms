#cms-wrapper
    display: flex
    flex: 1
    align-items: stretch

#cms-map
    display: flex
    flex-direction: column
    flex: 1
    .angular-google-map-container
        height: 600px
        flex: 1
        width: 100%

#cms-boundaries
    width: 180px
    ul li.selected
        background-color: #333
    .minimized
        display: none

#cms-boundaries.minimized
    width: 40px
    .header, ul
        display: none
    .minimized
        transform: rotate(270deg);
        margin-top: 70px;
        color: #434343;
        text-decoration: none;
        display: block;

.marker-label
    background-color: #555;
    border-radius: 3px;
    color: white;
    padding: 3px;

#cms-customers
    width: 435px
    .query
        padding: 5px 10px
        border-bottom: 1px solid #ccc
    .customer-summary
        margin-left: 7px
        .customer-phone
            margin-top: 5px
            display: inline-block
            font-style: italic
    li.customer-row
        display: flex
    li input[type='checkbox']
        margin-top: 0
    .tabbable .nav li
        display: inline-block
        background-color: #ccc
        padding: 5px
        border-radius: 3px
        margin: 3px
        cursor: pointer
    .tabbable .nav li.active
        background-color: #fff
    .tab-pane input
        width: 245px

#fountainG
    position: relative
    width: 100px
    height: 12px

.fountainG
    position: absolute
    top: 0
    background-color: #000000
    width: 13px
    height: 13px
    animation-name: bounce_fountainG
    animation-duration: 0.8s
    animation-iteration-count: infinite
    animation-direction: linear
    transform: scale(.3)
    border-radius: 8px

#fountainG_1
    left: 0
    animation-delay: 0.32s

#fountainG_2
    left: 13px
    animation-delay: 0.4s

#fountainG_3
    left: 25px
    animation-delay: 0.48

#fountainG_4
    left: 38px
    animation-delay: 0.56s

#fountainG_5
    left: 50px
    animation-delay: 0.64s

#fountainG_6
    left: 63px
    animation-delay: 0.72s

#fountainG_7
    left: 75px
    animation-delay: 0.8s

#fountainG_8
    left: 88px
    animation-delay: 0.88s

@keyframes bounce_fountainG
    0%
        transform: scale(1)
        background-color: #000000
    100%
        transform: scale(.3)
        background-color: #FFFFFF



